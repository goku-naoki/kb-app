<div id="items">
  <div class="container">
    <div class="items-header">
      <h2>Shop</h2>
    </div>
    <div class="items-list">
      <% @items.each do |item| %>
        <div class="item-box">
          <%=link_to item_path(item) do%>
            <div class="item-box-pic">
              <%= image_tag item.image %>
            </div>
            <p class="item-box-name">
              <%=item.name %>
            </p>
            <p class="item-box-price">
              $<%=item.price %> å††
            </p>
          <%end%>
        </div>
      <%end%>
    </div>
  </div>
</div>