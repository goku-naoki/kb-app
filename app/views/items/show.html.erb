<div id="item-detail">
  <div class="container">
    <div class="item-detail-header">
      <%if admin_signed_in? && current_page?(admin_item_path(current_admin,@item.id))%>
        <h2>商品詳細</h2>
      <%else%>
        <h2>Item Detail</h2>
      <%end%>
    </div>
    <div class="item-detail-box">
      <div class="item-detail-box-left">
        <% @item.images.each do |image|%>
          <div class="item-detail-box-left-image">
            <%= image_tag image %>
          </div>
        <%end%>
      </div>
      <div class="item-detail-box-right">
        <p class="item-detail-box-right-name">
          <%=@item.name%>
        </p>
        <p class="item-detail-box-right-price">
          ¥<%=@item.price%>円
        </p>
          <%if admin_signed_in? && current_page?(admin_item_path(current_admin,@item.id)) %>
            <div class="item-detail-box-right-edit"  data-item-id="<%=@item.id%>">
              <%=link_to '編集する', edit_item_path(@item.id) %>
            </div> 
            <div class="item-detail-box-right-delete" id="item-delete" data-item-id="<%=@item.id%>">
              削除する
            </div> 
          <%else%>
             <%if @cart_in_this.present?%>
              <div class="item-detail-box-right-cart-in">
                カートに入っています
              </div>
            <%else%>
              <button class="item-detail-box-right-cart" id="cart-btn" data-item-id="<%=@item.id%>"  >
                  カートに入れる
              </button> 
            <%end%>
          <%end%>
        <div class="item-detail-box-right-detail">
          <%=@item.detail%>
        </div>
      </div>
    </div>
  </div>
   <!-- loding -->
   <%= render "parts/spin"%>
    
</div>

 